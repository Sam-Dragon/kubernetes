# Node of the cluster
- basically servers where the application runs. 
- shortform is 'no'

# Create
kubectl create no node1

# Get
kubectl get no node1

# Edit
kubectl edit no node1

# Delete
kubectl delete no node1

# Drain node for maintainance
kubectl drain foo --force 
kubectl drain foo --grace-period=900
kubectl drain foo --grace-period=900 --force


# Node is schedulable
kubectl uncordon foo

# Node is unschedulable
kubectl cordon foo


